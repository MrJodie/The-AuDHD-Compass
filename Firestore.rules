rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule covers all public data: Discussions (threads, comments), Chat, and the Wiki.
    // It allows any user who has successfully signed in (including anonymous users created by the app)
    // to read and write content.
    match /artifacts/{appId}/public/data/{collectionName}/{document=**} {
      // The request.auth != null condition ensures that anonymous users (and logged-in users) can access, 
      // but completely unauthenticated, unknown requests are blocked.
      allow read, write: if request.auth != null; 
    }
  }
}
